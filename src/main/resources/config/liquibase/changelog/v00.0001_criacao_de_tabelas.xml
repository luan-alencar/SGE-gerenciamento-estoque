<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">


    <changeSet id="1" author="luan.augusto" context="ChangSet da tabela de Usuario">
        <createTable tableName="usuario" remarks="Tabela de Usuarios">

            <column name="id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="cpf" type="VARCHAR(11)">
                <constraints nullable="false"/>
            </column>

            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>

            <column name="telefone" type="VARCHAR(14)">
                <constraints nullable="true"/>
            </column>

            <column name="data_nascimento" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="admin" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Chave primária e Constantes de Usuário -->
        <addPrimaryKey tableName="usuario" columnNames="id" constraintName="pk_usuario"/>
        <addForeignKeyConstraint baseTableName="" baseColumnNames="" constraintName="" referencedTableName=""
                                 referencedColumnNames=""/>
        <createSequence sequenceName="sq_usuario" incrementBy="1" startValue="1"/>
        <addUniqueConstraint tableName="usuario" columnNames="cpf" constraintName="un_cpf_usuario"/>
        <addUniqueConstraint tableName="usuario" columnNames="email" constraintName="un_email_usuario"/>
        <addUniqueConstraint tableName="usuario" columnNames="rg" constraintName="un_rg_usuario"/>
    </changeSet>

    <changeSet id="2" author="luan.augusto" context="ChangeSet da tabela de Categoria">
        <createTable tableName="categoria" remarks="Tabela de Categorias de um Produto">

            <column name="id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="categoria" columnNames="id"/>

        <!-- Insertes da tabela Categoria com valores já fixos -->
        <insert tableName="categoria">
            <column name="id" value="1"/>
            <column name="descricao" value="Acessórios"/>
        </insert>
        <insert tableName="categoria">
            <column name="id" value="2"/>
            <column name="descricao" value="Eletrônicos"/>
        </insert>
        <insert tableName="categoria">
            <column name="id" value="3"/>
            <column name="descricao" value="Vestuário"/>
        </insert>
        <insert tableName="categoria">
            <column name="id" value="4"/>
            <column name="descricao" value="Fitness"/>
        </insert>
    </changeSet>

    <changeSet id="3" author="luan.augusto">

        <createTable tableName="pedido">
            <column name="id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="id_pagamento" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="id_produtos" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="id_usuario" type="NUMBER">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="pedido" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="pedido" baseColumnNames="id_pagamento" constraintName="fk_pagamento"
                                 referencedTableName="pagamento"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="pedido" baseColumnNames="id_produtos" constraintName="fk_produtos"
                                 referencedTableName="produto"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="pedido" baseColumnNames="id_usuario" constraintName="fk_usuario"
                                 referencedTableName="usuario"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="3" author="luan.augusto">

        <createTable tableName="produto" remarks="tabela de produtos">

            <column name="id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="preco" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="TEXT">
                <constraints/>
            </column>
            <column name="quantidade" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="id_categoria" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="pedidos" type="NUMBER">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addPrimaryKey tableName="produto" columnNames="id" constraintName="pk_produto"/>
        <createSequence sequenceName="sq_produto" startValue="1" incrementBy="1"/>
        <addForeignKeyConstraint baseTableName="produto" baseColumnNames="id_categoria" constraintName="pk_categoria"
                                 referencedTableName="categoria"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="produto" baseColumnNames="pedidos" constraintName="fk_pedidos"
                                 referencedTableName="pedido"
                                 referencedColumnNames="id"/>

    </changeSet>


    <changeSet id="5" author="luan.augusto">
        <createTable tableName="pedido_produtos">
            <column name="id_usuario" type="number">
                <constraints nullable="false"/>
            </column>
            <column name="id_produto" type="number">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="pedido_produtos" columnNames="id_usuario, id_produto"
                       constraintName="pk_pedido_produtos"/>
        <addForeignKeyConstraint baseTableName="pedido_produto" baseColumnNames="id_usuario"
                                 constraintName="fk_pp_pedido_produtos_usuario" referencedTableName="usuario"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="pedido_produtos" baseColumnNames="id_produto"
                                 constraintName="pk_pp_pedido_produtos_produto" referencedTableName="produto"
                                 referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="4" author="luan.augusto">
        <createTable tableName="pagamento_boleto">
            <column name="id" type="NUMBER">
                <constraints nullable="false"/>
            </column>
            <column name="data_vencimento" type="DATE">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="pagamento_boleto" columnNames="id"/>
        <addForeignKeyConstraint baseTableName="pagamento_boleto" baseColumnNames="id_pagamento"
                                 constraintName="fk_pagamento_boleto" referencedTableName="tipo_pagamento"
                                 referencedColumnNames="id_"/>
    </changeSet>


</databaseChangeLog>